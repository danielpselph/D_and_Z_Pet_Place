<h1>Edit Review</h1>

<%= form_tag "/shelters/#{@shelter.id}/reviews/#{@review.id}", method: :patch do %>
  <%= label_tag :title %>:<br>
  <%= text_field_tag :title %><br>
  <%= label_tag :rating %>:<br>
  <%= text_field_tag :rating %><br>
  <%= label_tag :content %>:<br>
  <%= text_field_tag :content %><br>
  <%= label_tag :image %>:<br>
  <%= text_field_tag :image %><br>
  <%= submit_tag(value='Add Review') %>
<% end %><br>

<%= link_to "Back", shelters_path %>