
<%= image_tag "#{@pet.image}" %>

<p>Name: <%= link_to "#{@pet.name}", "/pets/#{@pet.id}" %></p>
<p>Description: <%= @pet.description %> </p>
<p>Age: <%= @pet.age %> </p>
<p>Sex: <%= @pet.sex %> </p>
<p>Status: <%= @pet.status %> </p>
<%= button_to 'Edit Pet', "/pets/#{@pet.id}/edit", method: :get %>
<%= button_to 'Delete Pet', "/pets/#{@pet.id}", method: :delete %>
<% if session[:favorites] == nil %>
  <%= button_to "Favorite Pet", "/favorites/#{@pet.id}?add=true", method: :patch %>
<% elsif session[:favorites].include?(@pet.id) %>
  <%=  button_to "Remove from Favorites", "/favorites/#{@pet.id}?remove=true", method: :patch %>
<% else %>
  <%= button_to "Favorite Pet", "/favorites/#{@pet.id}?add=true", method: :patch %>
<% end %>
<% if @pet.adoptions.empty?%>
  <h4>No Open Applications</h4>
<% else %>
  <%= link_to "View All Applications", "/pets/#{@pet.id}/adoptions" %>
<% end %>
