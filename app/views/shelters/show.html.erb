

<h1>Name: <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %></h1>

<h4><%= @shelter.address %></h4>
<h4><%= "#{@shelter.city}, #{@shelter.state} #{@shelter.zip}" %></h4>

<%= button_to "Pets", "/shelters/#{@shelter.id}/pets", method: :get %>

<%= button_to "Edit", "/shelters/#{@shelter.id}/edit", method: :get %>
<% if @shelter.has_pending_pets? == false %>
  <%= button_to "Delete", "/shelters/#{@shelter.id}", method: :destroy %>
  <% end %>  
<%= link_to 'Add Review', "/shelters/#{@shelter.id}/reviews/new", method: :get %>




<h1>All Reviews</h1>

<% @shelter.reviews.each do |review| %>

  <section id="review-<%= review.id %>">
    <h4>Name: <%= link_to "#{review.title}", "/reviews/#{review.id}" %></h4>
    <p> Content: <%= review.content %>"
        Rating: <%= review.rating %>"
    </p>
    <p>
    <%= link_to "Edit Review", "/shelters/#{@shelter.id}/reviews/#{review.id}/edit", method: :get %>
    <%= link_to "Delete Review", "/shelters/#{@shelter.id}/reviews/#{review.id}", method: :delete %>

    </p>

  </section>

  <br>
<% end %>
