<%= link_to "Back to Shelters", shelters_path %><br>
<%= link_to "Back to Pets", pets_path %><br>
<p>Favorites: <%= favorites.total_count %></p>
<h3>Edit Shelter</h3>
<%= form_tag "/shelters/#{@shelter.id}", method: :patch do %>
  <%= label_tag :name %><br>
  <%= text_field_tag :name, @shelter.name %><br>
  <%= label_tag :address %><br>
  <%= text_field_tag :address, @shelter.address %><br>
  <%= label_tag :city %><br>
  <%= text_field_tag :city, @shelter.city %><br>
  <%= label_tag :state %><br>
  <%= text_field_tag :state, @shelter.state %><br>
  <%= label_tag :zip %><br>
  <%= text_field_tag :zip, @shelter.zip %><br><br>
  <%= submit_tag(value='Update Shelter') %>
<% end %>
